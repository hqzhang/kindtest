. ~/.rc
image=wavecloud/nginx-std
 port=8081
 app=nginx
 docker build -f Dockerfile -t $image  .

echo "login docker"
docker login -u$USERNAME -p$PASSWORD

echo "build docker"
docker rm -f $app
ls -al
docker build -f Dockerfile -t $image . 

echo "push docker"
docker push $image
docker rmi $image

echo "deploy docker "
docker run --name $app -d -p $port:$port $image

echo "wait a whole"
sleep 10

echo "verify docker"
if curl localhost:$port | grep 'Welcome HONGQI' ; then
    echo "verify successfully"
else
    echo "ERROR: verify failure"
    exit 1;
fi

echo "clean docker "
docker rm -f $app

